<% for category, i in @part.categories: %>
<div class="page-header">
  <h1 id="<%= @linkify(category.name) %>"><%= category.name %></h1>
</div>

<section>
  <% for page, j in category.pages: %>
  <h1 id="<%= @linkify(category.name, page.title) %>"><%= page.title %></h1>
  <section>
    <%- @include(page.relativeBase + '.html') %>
  </section>
  <% end %>
</section>
<% end %>