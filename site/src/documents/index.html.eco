<section class="row">
  <div class="span12 center">
    <hr class="soften no-image">
  </div>
</section>

<section class="row">
  <div class="span4">
    <h3 class="center">
      <a class="news-header" href="https://twitter.com/search/?q=%23camunda">#camunda Tweets <i class="twitter-bird"></i></a>
    </h3>
    <a class="twitter-timeline" href="https://twitter.com/search?q=%23camunda" data-theme="dark" data-chrome="noheader noborders transparent noscrollbar" data-widget-id="345585721429590016">Tweets about "#camunda"</a>
  </div>

  <div class="span4">
    <h3 class="center"><a class="news-header" http://blog.camunda.org/" >Blog Posts</a></h3>
    <div data-pipe data-truncate="120" data-pipe-url="http://pipes.yahoo.com/pipes/pipe.run?_id=00613d44ea58a5204f8898d2809fa85e&_render=json">
      <div data-ng-show="items.length > 0" class="content-box blog-list">
        <div class="content-blog" data-ng-cloak="items.length==0" data-ng-repeat="item in items">
          <a target="_blank" href="{{item.link}}">{{item.title}}</a>
          <p>{{decode(item.description)}}</p>
        </div>
      </div>
      <a href="http://blog.camunda.org/" class="option">more Blogposts</a>
      <div data-ng-show="items.length==0">Unable to load the cool camunda BPM blog posts, try refreshing the page!</div>
    </div>
  </div>

  <div class="span4">
    <h3 class="center">
      <a class="news-header" href="<%= @docUrl('community/meetings.html') %>">Meetings (free)</a>
    </h3>
    <div class="content-box">
      <table class="table" data-camunda-events-home></table>
    </div>
    <a class="option" href="<%= @docUrl('community/meetings.html') %>">More Meetings</a>
  </div>
</section>

<section class="row">
  <div class="span12 center">
    <hr class="soften">
  </div>
</section>

<section class="placeholder"></section>
