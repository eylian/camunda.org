      <div class="span2"><a href="<%= @docUrl('community/users.html#!/lvm') %>"><img class="typical-user" src="<%= @docUrl('assets/img/app/community/users/grayscale/lvm.png') %>" /></a></div>
      <div class="span2"><a href="<%= @docUrl('community/users.html#!/vhv') %>"><img class="typical-user" src="<%= @docUrl('assets/img/app/community/users/grayscale/vhv.png') %>" /></a></div>
      <div class="span2"><a href="<%= @docUrl('community/users.html#!/haspa') %>"><img class="typical-user" src="<%= @docUrl('assets/img/app/community/users/grayscale/haspa.png') %>" /></a></div>
